<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/iv_basket"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/ic_warning_record"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
         />

    <TextView
        android:id="@+id/parent_textview_id"
        android:layout_width="wrap_content"
        android:text="测试"
        android:layout_toRightOf="@id/iv_basket"
        android:textColor="@color/colorTextDark"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="18sp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/parent_textview_detail"
        android:layout_width="wrap_content"
        android:text="测试"
        android:layout_toRightOf="@id/parent_textview_id"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="14sp"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/parent_image"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/spinner_selector"
        android:layout_centerInParent="true"
        android:paddingRight="10dp"
        android:layout_height="wrap_content" />

</RelativeLayout>