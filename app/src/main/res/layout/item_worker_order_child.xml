<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <!-- 日期 -->
    <LinearLayout
        android:id="@+id/order_date_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/light_gary"
        android:gravity="center_horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <!-- 日 -->
        <TextView
            android:id="@+id/order_day_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14"
            android:textColor="@color/sliver"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <!-- 星期 -->
        <TextView
            android:id="@+id/order_week_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周四"
            android:textColor="@color/sliver"
            android:textSize="14sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 详情 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:background="@color/white">

            <!-- 项目信息 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/order_project_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="东南大学九龙湖校区"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6:30-18:30"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- 时长 -->
            <TextView
                android:id="@+id/order_timing_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="+600min"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/dark_green"/>

        </LinearLayout>

        <View
            android:id="@+id/split_line_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/sliver"/>

    </LinearLayout>


</LinearLayout>
