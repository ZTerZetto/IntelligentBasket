<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWorkerPrimaryBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_17"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:background="@drawable/bg_ellipse_with_gray_solid"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/textSize_10"
            android:textColor="@color/colorTextDark"
            android:text="2019年4月1日 19:32" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_17"
        android:layout_marginRight="@dimen/size_17"
        android:layout_marginBottom="@dimen/size_17"
        android:background="@drawable/bg_ellipse_with_gray_solid"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_message_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:textColor="@color/colorTextDark"
            android:textSize="@dimen/textSize_16"
            android:textStyle="bold"
            android:text="报警消息"/>

        <View
            style="@style/me_horizontal_view_style"/>
        <TextView
            android:id="@+id/tv_message_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textColor="@color/colorGradText"
            android:textSize="@dimen/textSize_14"
            android:text="施工人员违规操作"/>

    </LinearLayout>

</LinearLayout>