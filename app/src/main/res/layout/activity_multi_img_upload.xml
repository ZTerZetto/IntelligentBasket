<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorMainBackground">

    <!-- 顶部导航栏 -->
    <include layout="@layout/toolbar_with_title_and_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMainBackground"
        android:orientation="vertical">

        <!-- 图片显示画布 -->
        <LinearLayout
            style="@style/MultiLinearLayout">
            <!-- 上传的图 -->
            <com.automation.zzx.intelligent_basket_demo.widget.image.SmartImageView
                android:id="@+id/left_image_display_iv"
                style="@style/MultiSmartImageView"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="左侧图片"
                android:gravity="center"
                android:paddingBottom="@dimen/textSize_15"
                android:paddingTop="@dimen/textSize_8"
                android:textColor="@color/colorTextDark"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- 图片显示画布 -->
        <LinearLayout
            style="@style/MultiLinearLayout">
            <!-- 上传的图 -->
            <com.automation.zzx.intelligent_basket_demo.widget.image.SmartImageView
                android:id="@+id/right_image_display_iv"
                style="@style/MultiSmartImageView"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="右侧图片"
                android:gravity="center"
                android:paddingBottom="@dimen/textSize_15"
                android:paddingTop="@dimen/textSize_8"
                android:textColor="@color/colorTextDark"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>