<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Remove Window Title. -->
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- toolbar-->
        <!-- 修改toolbar图标的颜色-->
        <item name="android:textColorSecondary">#ffffff</item>
        <!-- 修改toolbar文字的颜色-->
        <item name="android:textColorPrimary">#ffffff</item>
        <!-- popupmenu -->
        <item name="popupMenuStyle">@style/popupMenuStyle</item>
        <item name="textAppearanceLargePopupMenu">@style/textAppearanceLargePopupMenu</item>
        <item name="textAppearanceSmallPopupMenu">@style/textAppearanceSmallPopupMenu</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 全屏 -->
    <style name="AppThemeFullscreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- welcome activity -->
    <style name="AppNameTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorBlackText</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="AppStatementTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorSilverText</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--basketDetail activity-->
    <!-- 吊篮编号TV -->
    <style name="HangingBasketTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorBlackText</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- paremeter activity -->
    <style name="ParameterSubTitleTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorSilverText</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="ParameterRelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <!-- 参数目录 -->
    <style name="ParameterItemTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorBlackText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>
    <!-- 参数内容 -->
    <style name="ParameterItemContentTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorSilverText</item>
    </style>
    <!-- 左图标 -->
    <style name="ParameterLeftImageView">
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">25dp</item>
    </style>
    <!-- 右图标 -->
    <style name="ParameterRightImageView">
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>
    <!-- 分割线 -->
    <style name="ParameterSplitLineView">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorParameterBackground</item>
    </style>

    <!-- 按钮样式-->
    <style name="btnStyle">
        <!--<item name="android:textColor">@android:color/white</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:typeface">serif</item>
        <item name="android:background">@drawable/shape_button_dark</item>
    </style>

    <!-- 文本编辑框样式-->
    <style name="editStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 底部菜单栏样式-->
    <style name="tab_menu_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_tab_selector</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">serif</item>
    </style>

    <!-- “设置”框 字体样式 -->
    <style name="usertextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_tab_selector</item>
    </style>

    <!-- “设置”框 字体样式 -->
    <style name="itemTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_tab_selector</item>
    </style>

    <!-- “我的” 文本右边箭头样式 -->
    <style name="img_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@mipmap/icon_user_arrow_more</item>
    </style>

    <!-- work photo activity -->
    <!-- 照片查看器 -->
    <style name="Dialog_Fullscreen">
        <item name="android:windowFullscreen">false</item>
    </style>

    <!-- media controller -->
    <style name="MediaController_Text">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- mapview fragment -->
    <!-- 百度地图点聚合 -->
    <style name="ClusterIcon.TextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">#ffeeeeee</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Bubble.TextAppearance.Dark" parent="android:TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff7f7f7f</item>
    </style>
    <style name="Bubble.TextAppearance.Light" parent="Bubble.TextAppearance.Dark">
        <item name="android:textColor">#ffeeeeee</item>
    </style>

    <!-- worker primary activity-->
    <style name="base_textView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 竖直分割线 -->
    <style name="me_vertical_view_style">
        <item name="android:layout_width">0.5dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#50666666</item>
    </style>
    <!-- 水平分割线 -->
    <style name="me_horizontal_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:background">#50666666</item>
    </style>
    <!-- textview  and drawable -->
    <style name="me_userLayout_textView_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">25dp</item>
        <item name="android:background">@drawable/list_view_item_click</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorGradText</item>
        <item name="android:textSize">@dimen/textSize_14</item>
    </style>
    <!-- 图片和文本框选项 -->
    <style name="me_userLayout_linearLayout_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/list_view_item_click</item>
    </style>
    <style name="me_userLayout_imageView_style">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:padding">5dp</item>
        <!--<item name="android:layout_marginTop">10dp</item>-->
    </style>
    <style name="me_userLayout_textView_style1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorGradText</item>
        <item name="android:textSize">@dimen/textSize_14</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <!-- 横向相对布局 -->
    <style name="me_common_item_relativeLayout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/list_view_item_click</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">15dp</item>
    </style>
    <!-- 右二维码 -->
    <style name="me_common_item_qr_code_imageView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@mipmap/ic_login_qreode</item>
    </style>
    <!-- 右箭头样式 -->
    <style name="me_common_item_arrow_right_imageView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@mipmap/arrow_right_my_gray</item>
    </style>
    <!-- 横向选项的 -->
    <style name="me_common_item_title_textView_style" parent="base_textView_style">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">@dimen/textSize_14</item>
        <item name="android:textColor">@color/colorGradText</item>
    </style>
    <!-- 数字提示 -->
    <style name="me_common_item_count_textView_style" parent="base_textView_style">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray01</item>
        <item name="android:textSize">@dimen/textSize_12</item>
    </style>
    <style name="me_common_item_count_with_organgered_bg_textView_style" parent="me_common_item_count_textView_style">
        <item name="android:background">@mipmap/bg_num_organge_red</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--更多-->
    <style name="more_common_item_textView_style" parent="me_common_item_title_textView_style">
        <item name="android:textSize">@dimen/textSize_16</item>
    </style>
    <style name="more_common_desc_textView_style" parent="base_textView_style">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">@dimen/textSize_15</item>
        <item name="android:textColor">@color/gray01</item>
    </style>
    <!-- 含有右箭头的内容 -->
    <style name="more_common_desc_align_left_textView_style" parent="more_common_desc_textView_style">
        <item name="android:layout_alignParentEnd">false</item>
    </style>
    <!-- 功能模块布局 -->
    <style name="more_common_linearlayout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/me_item_common_layout_marginTop</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/bg_white_quai</item>
    </style>

    <!-- 确认上下工弹窗 -->
    <!-- 普通弹窗 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
    </style>
    <!-- 确认弹窗 -->
    <style name="verify_dialog" parent="@style/dialog">
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item>
        <!--显示软件盘-->
    </style>

    <!-- worker order activity -->
    <!-- 分割线 -->
    <style name="parent_worker_order_line_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/sliver</item>
    </style>
    <style name="child_worker_order_line_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/sliver</item>
    </style>

    <!-- worker information -->


    <!-- 租方管理员 -->
    <!-- 租方管理员，吊篮顶部切换 -->
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/textSize_20</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- 复选框 -->
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleX">0.4</item>
        <item name="android:scaleY">0.4</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:button">@drawable/checkbox_style</item>
    </style>
    <!-- 底部合计文字 -->
    <style name="ApplyTotalTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize_16</item>
    </style>
    <!-- 底部操作 -->
    <style name="ApplyOperateTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/dark_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSize_18</item>
    </style>
    <!-- 吊篮基本信息 -->
    <style name="BasketItemLinearLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="BasketItemCatTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="BasketItemContentTextView" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- 添加悬浮框 -->
    <style name="AddFloatImageView">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>

    <!-- 区域管理员 -->
    <!-- toolbar 弹窗设置 -->
    <style name="ToolBarPopupThem" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <!-- 设置popupMenu背景颜色-->
        <item name="android:colorBackground">#4c4c4c</item>
        <!--设置popupMenu弹出位置不覆盖toolbar -->
        <item name="overlapAnchor">false</item>
        <!-- 修改字体大小 -->
        <item name="android:textSize">15sp</item>
        <!-- 修改字体颜色 -->
        <item name="android:textColor">#ffffff</item>
    </style>
    <!-- 吊篮状态管理 -->
     <style name="MgBasketStateRelativeLayout">
         <item name="android:layout_width">0dp</item>
         <item name="android:layout_height">32dp</item>
         <item name="android:layout_weight">1</item>
     </style>
     <style name="MgBasketStateTextView">
         <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">38dp</item>
         <item name="android:textSize">14sp</item>
         <item name="android:gravity">center</item>
     </style>
    <style name="MgBasketStateView">
         <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">2dp</item>
         <item name="android:layout_alignParentBottom">true</item>
         <item name="android:background">@color/colorPrimary</item>
         <item name="android:visibility">invisible</item>
    </style>
    <!-- 吊篮列表 -->
    <style name="MgBasketOperationTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/bg_ellipse_with_gray_line</item>
        <item name="android:padding">8dp</item>
    </style>
    <!-- 上传图片活动-弹出菜单 -->
    <style name="popupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <!-- 设置popupMenu背景颜色-->
        <item name="android:popupBackground">@color/white</item>
    </style>
    <style name="textAppearanceLargePopupMenu"
        parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="textAppearanceSmallPopupMenu"
        parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 弹窗：加载中 -->
    <style name="loadingDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item><!--设置dialog的背景-->
        <item name="android:windowFrame">@null</item><!--Dialog的windowFrame框为无-->
        <item name="android:windowNoTitle">true</item><!--是否显示title-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--是否半透明-->
        <item name="android:windowContentOverlay">@null</item><!--是否半透明-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item><!-- 对话框是否有遮盖 -->
        <item name="android:backgroundDimEnabled">false</item><!--背景是否模糊显示-->
        <item name="android:backgroundDimAmount">0.6</item><!--背景的灰度-->
    </style>

    <!-- UploadPreStopActivity 预报停信息采集页面 -->
    <style name="horizontal_linearlayout_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="horizontal_linearlayout_item_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="horizontal_linearlayout_item_ev">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">right</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@null</item>
    </style>

</resources>
