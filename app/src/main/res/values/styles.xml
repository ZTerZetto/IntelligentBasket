<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Remove Window Title. -->
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- toolbar-->
        <item name="android:textColorPrimary">#ffffff</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 全屏 -->
    <style name="AppThemeFullscreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- welcome activity -->
    <style name="AppNameTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorBlackText</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="AppStatementTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorSilverText</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--basketDetail activity-->
    <!-- 吊篮编号TV -->
    <style name="HangingBasketTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorBlackText</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- paremeter activity -->
    <style name="ParameterSubTitleTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorSilverText</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="ParameterRelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <!-- 参数目录 -->
    <style name="ParameterItemTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorBlackText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>
    <!-- 参数内容 -->
    <style name="ParameterItemContentTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorSilverText</item>
    </style>
    <!-- 左图标 -->
    <style name="ParameterLeftImageView">
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">25dp</item>
    </style>
    <!-- 右图标 -->
    <style name="ParameterRightImageView">
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>
    <!-- 分割线 -->
    <style name="ParameterSplitLineView">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorParameterBackground</item>
    </style>

    <!-- 按钮样式-->
    <style name="btnStyle">
        <!--<item name="android:textColor">@android:color/white</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:typeface">serif</item>
        <item name="android:background">@drawable/shape_button_dark</item>
    </style>

    <!-- 文本编辑框样式-->
    <style name="editStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 底部菜单栏样式-->
    <style name="tab_menu_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/tab_selector_bg</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">serif</item>
    </style>

    <!-- “设置”框 字体样式 -->
    <style name="usertextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/tab_selector_bg</item>
    </style>

    <!-- “我的” 文本右边箭头样式 -->
    <style name="img_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@mipmap/icon_user_arrow_more</item>
    </style>

    <!-- work photo activity -->
    <!-- 照片查看器 -->
    <style name="Dialog_Fullscreen">
        <item name="android:windowFullscreen">false</item>
    </style>

    <!-- media controller -->
    <style name="MediaController_Text">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- mapview fragment -->
    <!-- 百度地图点聚合 -->
    <style name="ClusterIcon.TextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">#ffeeeeee</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Bubble.TextAppearance.Dark" parent="android:TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff7f7f7f</item>
    </style>
    <style name="Bubble.TextAppearance.Light" parent="Bubble.TextAppearance.Dark">
        <item name="android:textColor">#ffeeeeee</item>
    </style>

    <!-- worker primary activity-->
    <style name="base_textView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 竖直分割线 -->
    <style name="me_vertical_view_style">
        <item name="android:layout_width">0.5dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#50666666</item>
    </style>
    <!-- 水平分割线 -->
    <style name="me_horizontal_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:background">#50666666</item>
    </style>
    <!-- textview  and drawable -->
    <style name="me_userLayout_textView_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">25dp</item>
        <item name="android:background">@drawable/list_view_item_click</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorGradText</item>
        <item name="android:textSize">@dimen/textSize_14</item>
    </style>
    <!-- 图片和文本框选项 -->
    <style name="me_userLayout_linearLayout_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/list_view_item_click</item>
    </style>
    <style name="me_userLayout_imageView_style">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:padding">5dp</item>
        <!--<item name="android:layout_marginTop">10dp</item>-->
    </style>
    <style name="me_userLayout_textView_style1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorGradText</item>
        <item name="android:textSize">@dimen/textSize_14</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <!-- 横向相对布局 -->
    <style name="me_common_item_relativeLayout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/list_view_item_click</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">15dp</item>
    </style>
    <!-- 右箭头样式 -->
    <style name="me_common_item_arrow_right_imageView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@mipmap/arrow_right_my_gray</item>
    </style>
    <!-- 横向选项的 -->
    <style name="me_common_item_title_textView_style" parent="base_textView_style">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">@dimen/textSize_14</item>
        <item name="android:textColor">@color/colorGradText</item>
    </style>
    <!--更多-->
    <style name="more_common_item_textView_style" parent="me_common_item_title_textView_style">
        <item name="android:textSize">@dimen/textSize_16</item>
    </style>

    <!-- 确认上下工弹窗 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item>
        <!--显示软件盘-->
    </style>

    <!-- worker order activity -->
    <!-- 分割线 -->
    <style name="parent_worker_order_line_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/sliver</item>
    </style>
    <style name="child_worker_order_line_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/sliver</item>
    </style>


</resources>
